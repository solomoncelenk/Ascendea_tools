<script src="plotly.min.js"></script>

<script>
    // --- Utility Function to get CSS Variable Values ---
    function getCssVar(name) {
        // Fallback for getting CSS variables if the element doesn't exist yet
        return getComputedStyle(document.documentElement).getPropertyValue(name).trim();
    }

    // --- JS Logic: Calculation and Metrics ---
    function calculateAnchorEffect() {
        const subPrice = parseFloat(document.getElementById('subPrice').value) || 0;
        const compPrice = parseFloat(document.getElementById('compPrice').value) || 0;
        const premiumPrice = parseFloat(document.getElementById('premiumPrice').value) || 0;
        const offerPrice = parseFloat(document.getElementById('offerPrice').value) || 0;

        // Basic validation and early exit
        if (subPrice < 0 || compPrice < 0 || premiumPrice < 0 || offerPrice < 0) return;
        
        // Handle invalid range (Premium must be higher than Substitute)
        if (premiumPrice <= subPrice) {
            document.getElementById('pbfDisplay').textContent = "N/A";
            document.getElementById('compGapDisplay').textContent = "N/A";
            document.getElementById('premiumProximityDisplay').textContent = "N/A";
            updateStrategicRating('Invalid Range', 'Premium Price must be greater than Substitute Price to define a spectrum.', 'disruption');
            renderChart(subPrice, compPrice, premiumPrice, offerPrice);
            return;
        }

        // 1. Perceived Bargain Factor (PBF)
        const range = premiumPrice - subPrice;
        let pbf = 1 - (offerPrice - subPrice) / range;
        pbf = Math.max(0, Math.min(1, pbf)).toFixed(2);

        // 2. Competitor Gap
        let compGap = compPrice > 0 ? ((offerPrice / compPrice) * 100 - 100).toFixed(0) : "N/A";
        
        // 3. Premium Proximity
        let premiumProximity = ((offerPrice - subPrice) / range * 100).toFixed(0);
        
        // --- Update Metric Displays ---
        document.getElementById('pbfDisplay').textContent = pbf;
        document.getElementById('compGapDisplay').textContent = `${compGap}%`;
        document.getElementById('premiumProximityDisplay').textContent = `${premiumProximity}%`;

        // --- Strategic Rating ---
        const rating = getStrategicRating(pbf, offerPrice, compPrice, premiumPrice);
        updateStrategicRating(rating.title, rating.summary, rating.status);
        
        // --- Chart Update ---
        if (typeof Plotly !== 'undefined') {
             renderChart(subPrice, compPrice, premiumPrice, offerPrice);
        } else {
             console.warn("Plotly not loaded yet. Chart rendering skipped.");
        }
    }
    
    function getStrategicRating(pbf, offerPrice, compPrice, premiumPrice) {
        let title, summary, status;

        const pbfNum = parseFloat(pbf);

        if (offerPrice < compPrice * 0.95 && pbfNum > 0.75) {
            title = "Value Trap âš ï¸";
            summary = `Your price is significantly lower than the competitor, resulting in a high PBF (${pbf}). You are likely leaving significant margin on the table. **Raise your price or enhance justification.**`;
            status = 'valuetrap';
        } else if (offerPrice > premiumPrice * 0.9 || pbfNum < 0.25) {
            title = "Disruption Point ðŸš©";
            summary = `Your price is too close to the Premium Anchor (or beyond it). You need an **exceptionally strong value proposition** to justify this price point.`;
            status = 'disruption';
        } else {
            title = "Sweet Spot âœ…";
            summary = `Your price is optimally positioned in the perceived value zone. The PBF (${pbf}) balances value delivery with premium aspiration. **Proceed with confidence.**`;
            status = 'sweetspot';
        }

        return { title, summary, status };
    }

    function updateStrategicRating(title, summary, status) {
        document.getElementById('ratingTitle').textContent = title;
        document.getElementById('ratingSummary').textContent = summary;
        
        const ratingBox = document.getElementById('strategicRatingBox');
        const body = document.getElementById('calculatorBody');
        
        ratingBox.className = 'metric-box asc-glass-card ' + status; 
        body.className = status;
    }

    // --- JS Logic: Plotly Chart Generation ---
    function renderChart(subPrice, compPrice, premiumPrice, offerPrice) {
        if (typeof Plotly === 'undefined') {
            return;
        }

        const prices = [subPrice, compPrice, offerPrice, premiumPrice];
        const labels = ["Substitute", "Competitor", "Your Offer", "Premium"];
        
        const colors = [
            getCssVar('--color-substitute'),
            getCssVar('--color-competitor'),
            getCssVar('--color-offer'),
            getCssVar('--color-premium')
        ];

        // Chart Styling Variables (Matching Ascendea Dark Theme)
        const chartBgColor = 'rgba(255, 255, 255, 0)'; 
        const chartGridColor = 'rgba(255, 255, 255, 0.1)';
        const chartTextColor = getCssVar('--asc-text-muted');
        const darkBackground = getCssVar('--asc-bg-mid');

        const traceRange = {
            x: [subPrice, premiumPrice],
            y: [0, 0],
            mode: 'lines',
            line: { color: chartGridColor, width: 4 },
            hoverinfo: 'none',
            showlegend: false
        };

        const tracePoints = {
            x: prices,
            y: [0, 0, 0.1, 0], 
            text: labels.map((l, i) => `${l}<br>($${prices[i].toLocaleString()})`),
            mode: 'markers+text',
            marker: {
                size: 18, 
                color: colors,
                line: {
                    color: darkBackground, 
                    width: 3
                }
            },
            textposition: 'top center',
            name: 'Prices',
            textfont: {
                family: 'Inter, sans-serif',
                size: 13,
                color: chartTextColor
            }
        };

        const data = [traceRange, tracePoints];

        const layout = {
            title: false,
            xaxis: {
                title: false,
                range: [
                    Math.min(...prices) * 0.9, 
                    Math.max(...prices) * 1.1
                ],
                tickformat: '$,.0f',
                tickfont: { color: chartTextColor },
                linecolor: chartGridColor,
                showgrid: false,
                zeroline: false
            },
            yaxis: {
                visible: false,
                range: [-0.5, 0.5], 
                zeroline: false
            },
            showlegend: false,
            hovermode: 'closest', 
            margin: { t: 50, b: 50, l: 30, r: 30 },
            plot_bgcolor: chartBgColor, 
            paper_bgcolor: chartBgColor 
        };

        Plotly.react('anchorEffectChart', data, layout, {responsive: true, displayModeBar: false}); 
    }

    // Initial run on load
    document.addEventListener('DOMContentLoaded', calculateAnchorEffect);
</script>
</body>
</html>
